---
    layout: base.liquid
---

{{ content }}

<nav id="rightSidebar" class="box-container sidebar">
    <details open>
        <summary>
            {% header "h3" "<span class=emoji>â–¼</span>navigation" %}
        </summary>

        {% include '_nav/blog/data.liquid' %}

    </details>

    <div class="latest">
        {% header "h3" "latest" %}

        <ul>
            {% for post in collections[ 'posts' ] limit: 5 %}
                {% if post.data.title == 'all posts' %}{% continue %}{% endif %}
                <li><a href="{{ post.url }}">{{ post.data.title }} - {{ post.date | date: "%m&#183;%d&#183;%Y" }}</a></li>
            {% endfor %}
        </ul>
    </div>
    
    <style>
        nav#collapsible {
            display: none;
        }

        nav#rightSidebar .latest {
            margin-top: var(--spacing);
        }

        @media only screen and (max-width: 800px) {
            nav#rightSidebar .latest {
                display: none;
            }
        }
    </style>
</nav>